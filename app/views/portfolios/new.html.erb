<h1>Nieuw Project </h1>

<%= form_for :portfolio, url: portfolios_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Terug', portfolios_path %>