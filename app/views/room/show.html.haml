%h1
  = @room.description
%p


%table
  %tr
    %th Furniture
    %th Date
    %th
  - @furnitures.each do |furniture|
    %tr
    %td= furniture.description  
    %td= furniture.created_at
    %td= link_to 'View', :controller => 'furniture', :action => :show, :id => furniture.id

%p New Furniture
= form_for :furniture, url: furniture_index_path do |f|
  %p
    = f.text_field :description
    = f.hidden_field :room_id,  :value => @room.id
  %p
    = f.submit "Add new furniture", :class => 'button tiny'

  = link_to 'Back', house_path(:id => @room.house_id), :class => 'button tiny'